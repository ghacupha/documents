<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <!--
        Added the constraints for entity UserProfile.
    -->
    <changeSet id="20200303182903-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="id"
                                 baseTableName="user_profile"
                                 constraintName="fk_user_profile_user_id"
                                 referencedColumnNames="id"
                                 referencedTableName="gha_user"/>

        <addForeignKeyConstraint baseColumnNames="department_id"
                                 baseTableName="user_profile"
                                 constraintName="fk_user_profile_department_id"
                                 referencedColumnNames="id"
                                 referencedTableName="department"/>

        <addForeignKeyConstraint baseColumnNames="user_profile_id"
                                 baseTableName="user_profile_transaction_documents"
                                 constraintName="fk_user_profile_transaction_documents_user_profile_id"
                                 referencedColumnNames="id"
                                 referencedTableName="user_profile"/>

        <addForeignKeyConstraint baseColumnNames="transaction_documents_id"
                                 baseTableName="user_profile_transaction_documents"
                                 constraintName="fk_user_profile_transaction_documents_transaction_documents_id"
                                 referencedColumnNames="id"
                                 referencedTableName="transaction_document"/>
        
        <addForeignKeyConstraint baseColumnNames="user_profile_id"
                                 baseTableName="user_profile_formal_documents"
                                 constraintName="fk_user_profile_formal_documents_user_profile_id"
                                 referencedColumnNames="id"
                                 referencedTableName="user_profile"/>

        <addForeignKeyConstraint baseColumnNames="formal_documents_id"
                                 baseTableName="user_profile_formal_documents"
                                 constraintName="fk_user_profile_formal_documents_formal_documents_id"
                                 referencedColumnNames="id"
                                 referencedTableName="formal_document"/>
        
    </changeSet>
</databaseChangeLog>
